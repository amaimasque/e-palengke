{
	"compileOnSave": true,
	"compilerOptions": {
		"allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
		"baseUrl": "./",
		/* Base directory to resolve non-absolute module names. */
		"paths": {
      "assets": ["./assets"],
      "components": ["./components"],
      "modules": ["./modules"],
      "reducers": ["./reducers"],
      "screens": ["./screens"],
		},
	},
	"exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}